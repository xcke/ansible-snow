{% for iface in interfaces %}
interface {{ iface.name }}
{% if iface.mode == 'l3_ipv4' %}
    description {{ iface.description }}
    no switchport
    ip address {{ iface.ipv4_address }}
{% elif iface.mode == 'l3_ipv4_lo'%}
    description {{ iface.description }}
    ip address {{ iface.ipv4_address }}
{% else%}
    switchport
{% endif %}
{% endfor %}